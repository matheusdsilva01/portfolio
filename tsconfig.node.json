{
  "compilerOptions": {
    "baseUrl": "./src/client",
    "paths": {
      "@/*": ["src/client/*"],
      "@/components/*": ["src/client/components/*"]
    },
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts"]
}
